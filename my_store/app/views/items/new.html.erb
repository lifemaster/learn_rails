<h1>Создание нового товара</h1>

<%= form_for Item.new do |f| %>

	<p>Цена: <br><%= f.text_field :price %></p>
	<p>Название: <br><%= f.text_field :name %></p>
	<p>Описание: <br><%= f.text_field :description %></p>
	<p>Вес: <br><%= f.text_field :weight %></p>

	<p><%= f.submit "Создать товар"%></p>

<% end %>